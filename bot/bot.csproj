<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>12.0</LangVersion>
  </PropertyGroup>

  <Target Name="MergeForSubmission" AfterTargets="Build">
    <Message Text="Running merge script to generate CodinGame submission file..." Importance="high" />
    <Exec Command="pwsh.exe -File &quot;$(MSBuildProjectDirectory)\..\scripts\merge-for-submission.ps1&quot;" />
  </Target>

</Project>
